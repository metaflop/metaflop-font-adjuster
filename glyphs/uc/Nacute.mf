% box dimension definition %
beginadjchar(oct"213",5,cap#,0);

% sidebearings %
if (sidebearing=1):
numeric l,r;
normal_adjust_fit(space*0.3u#,space*0.3u#);fi

% construction %
x1=x2=leftstemloc;
x5=x4=w-x1;
y2=y4=h;
y1=y5=0;
x13=.3w;
x12=.7w;
y12=h+bar1;
y13=h+0.5bar1;

% draw %
draw z1---z2---z5---z4;
draw z12---z13;

penlabels(range 0 thru 30);

endchar;