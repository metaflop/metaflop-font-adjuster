% box dimension definition %
beginadjchar("J",5,cap#,0);

% sidebearings %
numeric l,r;
normal_adjust_fit(space*0.1u#,space*0.3u#);

% construction %
x1=leftstemloc;
x4=x5=w-x1;
y5=h;
y2=y3=0;
y1=y4=bar1;
z2=z1+whatever*dir(-ang);   
z3=z4+whatever*dir(ang);

% draw %
draw z1--z2--z3--z4--z5;

% composite glyphs %
charanchortops_[charcode]=(.5w,h+1/6cap);

penlabels(range 0 thru 30);

endchar;