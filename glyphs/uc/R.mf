% box dimension definition %
beginadjchar("R",5,cap#,0);

% sidebearings %
numeric l,r;
normal_adjust_fit(space*0.35u#,space*0.2u#);

% construction %
x1=x2=x3=leftstemloc;
x5=x6=x8=w-x1;
x4=x7;
y3=y4=h;
y1=y8=0;
y2=y7=bar3;
y6=bar4;
y5=bar5;
z4=z5+whatever*dir(-ang);   

% draw %
draw z1---z3---z4---z5---z6---z7---z2;
draw z7--z8;

% composite glyphs %
charanchortops_[charcode]=(.45w,h+1/6cap);

penlabels(range 0 thru 30);

endchar;