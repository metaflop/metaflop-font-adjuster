% box dimension definition %
beginadjchar("y",5,cap#,0);

% sidebearings %
if (sidebearing=1):
numeric l,r;
normal_adjust_fit(space*0.3u#,space*0.3u#);fi

% construction %
x1=x4=leftstemloc;
x3=w-x1;
x2=.5(x3+x1);
y2=0;
y1=y3=bar3;
